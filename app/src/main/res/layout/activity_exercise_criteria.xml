<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseCriteriaActivity"
    tools:layout_editor_absoluteY="81dp">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="20">


        <TextView
            android:id="@+id/tvIntervals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Intervals"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="0" />

        <AutoCompleteTextView
            android:id="@+id/actvIntervals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Intervals"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Max Speed"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1" />

        <AutoCompleteTextView
            android:id="@+id/actvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Speed"
            app:layout_column="1"
            app:layout_row="1" />


        <TextView
            android:id="@+id/tvIncline"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Max Incline"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="2" />

        <AutoCompleteTextView
            android:id="@+id/actvIncline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2"
            android:hint="Incline" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Max Duration"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="3" />


        <AutoCompleteTextView
            android:id="@+id/actvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="3"
            android:hint="Duration" />

        <Button
            android:id="@+id/btnAddInterval"
            android:layout_width="125dp"
            android:layout_height="62dp"
            android:text="Add"
            android:textAllCaps="false"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="center"
            app:layout_row="4" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>